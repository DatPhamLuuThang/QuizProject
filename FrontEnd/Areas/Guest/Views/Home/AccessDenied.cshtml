@model AccessDenied
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>FrontEnd</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/assets/images/logo/favicon.png">

    <!-- page css -->

    <!-- Core css -->
    <link href="~/assets/css/app.min.css" rel="stylesheet">

</head>

<body>
<div class="app">
    <div class="container-fluid">
        <div class="d-flex full-height p-v-20 flex-column justify-content-between">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="p-v-30">
                            <h1 class="font-weight-semibold display-1 text-primary lh-1-2">Unauthorized</h1>
                            <h2 class="font-weight-light font-size-30">Access Denied</h2>
                            @if (!string.IsNullOrEmpty(Model.Message))
                            {
                                <p class="text-muted mt-3">
                                    @Model.Message
                                </p>
                            }
                            <a class="btn btn-info mt-3" asp-area="@ProgramConfig.Area.Guest" asp-controller="Home" asp-action="Index">
                                <i class="ri-home-4-line"></i> Trở về trang chủ
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 m-l-auto">
                        <img class="img-fluid" src="~/assets/images/others/error-1.png" alt="">
                    </div>
                </div>
            </div>
            <div class="d-none d-md-flex  p-h-40 justify-content-between">
                <span class="">Phạm Lưu Thắng Đạt</span>
            </div>
        </div>
    </div>
</div>


<!-- Core Vendors JS -->
<script src="~/assets/js/vendors.min.js"></script>

<!-- page js -->

<!-- Core JS -->
<script src="~/assets/js/app.min.js"></script>

</body>

</html>